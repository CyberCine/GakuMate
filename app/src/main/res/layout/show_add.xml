<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    android:backgroundTint="@color/ColorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose a Color for your Category"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/background_recycler"/>

    <LinearLayout
        android:id="@+id/colorPickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:id="@+id/fNote1">

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/note_color1"/>

                <ImageView
                    android:id="@+id/imgNoteC1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_tick"
                    android:layout_gravity="center"
                    app:tint="@color/white" />
            </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote2">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color2"/>

            <ImageView
                android:id="@+id/imgNoteC2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote3">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color3"/>

            <ImageView
                android:id="@+id/imgNoteC3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote4">

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/note_color4"/>

        <ImageView
            android:id="@+id/imgNoteC4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_tick"
            android:layout_gravity="center"
            app:tint="@color/white" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote5">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color5"/>

            <ImageView
                android:id="@+id/imgNoteC5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote6">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color6"/>

            <ImageView
                android:id="@+id/imgNoteC6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote7">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color7"/>

            <ImageView
                android:id="@+id/imgNoteC7"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:id="@+id/fNote8">

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/note_color8"/>

            <ImageView
                android:id="@+id/imgNoteC8"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_tick"
                android:layout_gravity="center"
                app:tint="@color/white" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Choose a Color for your Category"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_recycler"/>

    <EditText
        android:id="@+id/editTextCategoryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_recycler"
        android:hint="Enter Category Title"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="Save"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/background"
        android:textColor="#000000"/>



</LinearLayout>