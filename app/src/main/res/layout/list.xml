<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewTasks"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/checkbg"
    android:elevation="6dp"
    app:cardBackgroundColor="#BEFFFFFF"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue2"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtViewDate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/paprika"
            android:text="Date"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txtViewTime"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/paprika"
            android:paddingStart="10dp"
            android:text="Time"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <ImageButton
            android:id="@+id/imgBtnDelete"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/bgeditdelete"
            android:src="@drawable/delete"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/paprika"
        android:text="Tasks"
        android:textColor="#000000" />

</androidx.cardview.widget.CardView>